<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="title" class="form-control-label">Заголовок:</label>
                        <input type="text" class="form-control" id="title-edit" value="{{ note[0].title }}">
                    </div>
                    <div class="form-group">
                        <label for="message" class="form-control-label">Описание:</label>
                        <textarea class="form-control" id="message-edit">{{ note[0].text }}</textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" id="sendEditForm">Сохранить</button>
            </div>
        </div>
    </div>
</div>